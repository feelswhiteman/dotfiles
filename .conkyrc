conky.config = {
    alignment = 'top_right',
    background = true,
    border_width = 1,
    cpu_avg_samples = 2,
    default_color = 'white',
    default_outline_color = 'white',
    default_shade_color = 'white',
    double_buffer = true,
    draw_borders = false,
    draw_graph_borders = true,
    draw_outline = false,
    draw_shades = false,
    extra_newline = false,
    font = 'DejaVu Sans Mono:size=12',
    gap_x = 25,
    gap_y = 55,
    minimum_height = 250,
    minimum_width = 250,
    net_avg_samples = 2,
    no_buffers = true,
    out_to_console = false,
    out_to_ncurses = false,
    out_to_stderr = false,
    out_to_x = true,
    own_window = true,
    own_window_color = '#282a36',
    own_window_class = 'Conky',
	-- for gnome
    own_window_type = 'desktop',
	-- for i3
    own_window_type = 'override',
    show_graph_range = false,
    show_graph_scale = false,
    stippled_borders = 0,
    update_interval = 1,
    uppercase = false,
    use_spacer = 'none',
	use_xft = true,
	own_window_argb_visual = true,
	own_window_argb_value = 150,

	color1 = '#af87ff',
}

conky.text = [[
# -- Display workspace
${color1}${alignc}$desktop_name 
$hr
# -- Display uptime, ram and cpu usage
${color1}Uptime:$color $uptime
${color1}RAM:$color $memperc% ${membar 6, 124}
${color1}CPU:$color $cpu% ${cpubar 6, 124}
$hr
# -- Display File System Information
${color1}File system: ${voffset 3}  
${color1} / ${color2}${fs_used /} / ${fs_size /} ${alignr} ${fs_used_perc /}% ${color1}${fs_bar 6, 124 /}  
$hr
${color1}Name              PID     CPU%   MEM%
${color lightgrey} ${top name 1} ${top pid 1} ${top cpu 1} ${top mem 1}
${color lightgrey} ${top name 2} ${top pid 2} ${top cpu 2} ${top mem 2}
${color lightgrey} ${top name 3} ${top pid 3} ${top cpu 3} ${top mem 3}
${color lightgrey} ${top name 4} ${top pid 4} ${top cpu 4} ${top mem 4}
$hr
${color1}TODO:${color}
${exec cat ~/todo.txt}
]]




